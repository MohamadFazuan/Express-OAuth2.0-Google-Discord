# Server Configuration
API_PORT=3001
NODE_ENV=development
SESSION_SECRET=your-super-secret-session-key-change-this

# Security Configuration
TOKEN_ENCRYPTION_KEY=your-32-character-encryption-key
TRUST_PROXY=false
LOG_LEVEL=info

# Frontend URL for CORS (Next.js frontend)
FRONTEND_URL=http://localhost:3000

# API Configuration
API_URL=http://localhost:3001
HEALTH_CHECK_INTERVAL=30000

# MongoDB Session Store (optional but recommended for production)
MONGODB_URI=mongodb://localhost:27017/oauth-sessions

# Google OAuth2.0 Configuration
# Get these from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Discord OAuth2.0 Configuration  
# Get these from: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Production Settings (uncomment for production)
# NODE_ENV=production
# SESSION_SECRET=generate-a-strong-random-secret-for-production
# TOKEN_ENCRYPTION_KEY=generate-a-32-character-encryption-key
# FRONTEND_URL=https://yourdomain.com
# API_URL=https://api.yourdomain.com
# TRUST_PROXY=true
# LOG_LEVEL=warn