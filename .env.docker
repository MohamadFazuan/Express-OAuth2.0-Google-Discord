# Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=production
API_PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Session Security
SESSION_SECRET=your-super-secret-key-min-32-characters-long

# OAuth2.0 Provider Configuration
GOOGLE_CLIENT_ID=your-google-client-id-from-cloud-console
GOOGLE_CLIENT_SECRET=your-google-client-secret

DISCORD_CLIENT_ID=your-discord-client-id-from-developer-portal
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Database Configuration (MongoDB)
MONGO_USERNAME=admin
MONGO_PASSWORD=password123
MONGO_DATABASE=oauth_demo
MONGODB_URI=mongodb://admin:password123@mongodb:27017/oauth_demo?authSource=admin

# Cache Configuration (Redis)
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Security Headers
TRUST_PROXY=true
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
