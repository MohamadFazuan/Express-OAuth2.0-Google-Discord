# Production Environment Configuration Template
# Copy this file to .env.production and fill in your production values

# Server Configuration
API_PORT=3001
NODE_ENV=production
SESSION_SECRET=generate-a-strong-32-character-random-secret-key-here
TRUST_PROXY=true

# Security Configuration  
TOKEN_ENCRYPTION_KEY=generate-another-32-character-key-for-token-encryption
LOG_LEVEL=warn

# Frontend URL for CORS (Next.js frontend)
FRONTEND_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# MongoDB Session Store (REQUIRED for production)
MONGODB_URI=mongodb://username:password@mongodb-host:27017/oauth-sessions

# OAuth Credentials (REQUIRED)
# Google OAuth2.0 Configuration
# Get these from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Discord OAuth2.0 Configuration  
# Get these from: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your-production-discord-client-id
DISCORD_CLIENT_SECRET=your-production-discord-client-secret

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Optional: Error Tracking (Sentry)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional: Redis for Session Store (alternative to MongoDB)
# REDIS_URL=redis://username:password@redis-host:6379
